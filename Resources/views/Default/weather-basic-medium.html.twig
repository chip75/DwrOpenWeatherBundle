<style>
    @import url('https://fonts.googleapis.com/css?family=Raleway');
    .ow-container .bold{font-weight: bold;}
    .ow-container{font-family: 'Raleway', sans-serif; line-height: 150%; color: #2e3436; width: 320px;}

    .ow-container header,
    .ow-container header{display: table;}
    .ow-container header .location {margin-left: 7px; font-size: 150%;}
    .ow-container header .cell {display: table-cell; vertical-align: middle}
    .ow-container header .cell .temperature {font-weight: bold; font-size: 140%;}

    .ow-container table {
        display: table;
        background-color: transparent;
        border-collapse: collapse;
        border-spacing: 0px;
        max-width: 100%;
    }
    .ow-container table {width: inherit;  border: 1px solid #ddd;}
    .ow-container table td {padding: 10px;}
    .ow-container table tbody tr:nth-child(odd) {
        background-color: #eee;
    }
</style>

<section class="ow-container">
    <header>
        <div class="location bold">{{ weather.cityName() }}</div>
        <div class="data-table">
            <div class="cell">
                <img class="icon"
                     src="http://openweathermap.org/img/w/{{ weather.icon() }}.png"
                     alt="{{ weather.description() }}">
            </div>
            <div class="cell">
                <span class="temperature">{{ weather.temp()|kelvinToCelsius }} &deg;C</span>
            </div>
        </div>
    </header>
    <table>
        <tbody>
        <tr>
            <td>Location:</td>
            <td><span class="bold">{{ weather.cityName() }}</span>, {{ weather.country() }}</td>
        </tr>
        <tr>
            <td>Description:</td>
            <td>{{ weather.description() }}</td>
        </tr>
        <tr>
            <td>Temperature:</td>
            <td>{{ weather.temp()|kelvinToCelsius }} &deg;C</td>
        </tr>
        <tr>
            <td>Pressure:</td>
            <td>{{ weather.pressure() }} hPa</td>
        </tr>
        <tr>
            <td>Wind:</td>
            <td>{{ weather.windSpeed() }} m/s</td>
        </tr>
        <tr>
            <td>Humidity:</td>
            <td>{{ weather.humidity() }} %</td>
        </tr>
        <tr>
            <td>Sunrise:</td>
            <td>{{ weather.sunrise()|intToDate('H:i:s') }}</td>
        </tr>
        <tr>
            <td>Sunset:</td>
            <td>{{ weather.sunset()|intToDate('H:i:s') }}</td>
        </tr>
        <tr>
            <td>Source datetime:</td>
            <td>{{ weather.dt()|intToDate('d-m-Y (H:i)') }}</td>
        </tr>
        </tbody>
    </table>
</section>

