<style>
    @import url('https://fonts.googleapis.com/css?family=Raleway');
    .clear-both{clear: both;}
    .ow-container .bold{font-weight: bold;}
    .ow-container{font-family: 'Raleway', sans-serif; line-height: 150%; color: #2e3436; width: 1024px;}

    .ow-container .italic{font-style: italic;}
    .ow-container .xsmall-font{font-size: 60%;}
    .ow-container .small-font{font-size: 80%;}
    .ow-container .green{color: #3c763d;}
    .ow-container .black{color: #000;}

    .ow-container .ow-forecast{float: left; margin-left: 10px;  width: 600px;  line-height: 90%;  }
    .ow-container .ow-forecast header{  display: table;  width: 320px;  }

    .ow-container table {
        display: table;
        background-color: transparent;
        border-collapse: collapse;
        border-spacing: 0px;
        max-width: 100%;
    }

    .ow-container table {width: inherit;  border: 1px solid #ddd;}
    .ow-container table td {padding: 10px;}
    .ow-container table tbody tr:nth-child(odd) {
        background-color: #eee;
    }

    .ow-container .ow-forecast header{padding-top: 60px;  width: 100%;}
    .ow-container .ow-forecast .title{line-height: 150%;}

    .blue-highlighted{border-radius: 90px; background-color: #00A5E3; padding: 5px 5px; color: #fff; font-size: 90%}
    .orange-highlighted{border-radius: 90px; background-color: #eea236; padding: 5px 5px; color: #fff; font-size: 90%}
    .green-highlighted{border-radius: 90px; background-color: #2ca02c; padding: 5px 5px; color: #fff; font-size: 90%}
</style>
<section class="ow-container">
    <div class="ow-forecast">
        <header>
            <div class="title"><span class="bold">{{ forecastCity.cityName() }}</span>, <span class="bold">{{ forecastCity.country() }}</span></div>
        </header>
        <table>
            <tbody>
            {% for weather in forecast %}
            <tr>
                <td><span class="small-font">{{ weather.timestamp|intToDate('d-m-Y H:i') }}</span></td>
                <td><img class="icon" src="http://openweathermap.org/img/w/{{ weather.icon }}.png"></td>
                <td><span class="green-highlighted">{{ weather.temp|kelvinToCelsius }}&nbsp;&deg;C</span></td>
                <td><span class="bold small-font"><?php echo $weather['description'] ?></span></td>
                <td><span class="italic small-font">pressure:&nbsp;</span><span class="bold small-font">{{ weather.pressure }}&nbsp;hPa</span></td>
                <td><span class="italic small-font">humidity:&nbsp;</span><span class="bold small-font">{{ weather.humidity }}&nbsp;%</span></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</section>
