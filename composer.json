{
  "name":         "dwr/openweather-bundle",
  "description":  "Symfony3 bundle wraps Open Weather API.",
  "keywords":     ["weather", "open weather api", "weather rest api", "forecast"],
  "homepage":     "https://github.com/dariuszwrzesien/DwrOpenWeatherBundle",
  "type":         "symfony-bundle",
  "license":      "MIT",
  "authors": [
    {
      "name":     "Dariusz Wrzesien",
      "email":    "dariuszwrzesien@gmail.com",
      "homepage": "https://github.com/dariuszwrzesien/DwrOpenWeatherBundle"
    }
  ],
  "require": {
    "symfony/symfony": "3.*",
    "symfony/framework-bundle": "3.*",
    "symfony/twig-bundle": "3.*",
    "guzzlehttp/guzzle": "~6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "5.7.*",
    "satooshi/php-coveralls": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Dwr\\OpenWeatherBundle\\": ""
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "Tests/"
    }
  }
}
